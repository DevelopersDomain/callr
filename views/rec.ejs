<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Screen Recording with Camera</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }
    </style>
</head>
<body>
    <div>
        <h1>Screen Recording</h1>
        <video class="recording" autoplay muted controls width="500px" height="500px" style="display: none;"></video>
        
        <h1>Camera Feed</h1>
        <video id="cameraVideo" autoplay muted controls width="200px" height="150px" style="display: none;"></video>

        <div>
            <button class="start-btn">Start Recording</button>
            <button class="stop-btn" disabled>Stop Recording</button>
            <ul id="recordings-list"></ul>
        </div>

        <!-- Modal -->
        <div id="cameraModal" class="modal">
            <div class="modal-content">
                <h2>Select Camera and Microphone</h2>
                <label for="cameraSelect">Camera:</label>
                <select id="cameraSelect"></select>
                <br />
                <label for="microphoneSelect">Microphone:</label>
                <select id="microphoneSelect"></select>
                <br />
                <button id="includeCamera">Start with Camera</button>
                <button id="excludeCamera">Start without Camera</button>
            </div>
        </div>
    </div>

    <script src="javascripts/rec.js"></script>
</body>
</html>
